        BoxLayout:
            spacing: 30
            size_hint_y: .1
            Button:
                text: "[b]Confirm[/b]"
                on_release: root.load(trans_from.text,trans_to.text)
                markup: True

            Button:
                text: "[b]Cancel[/b]"
                on_release: root.cancel()
                markup: True
